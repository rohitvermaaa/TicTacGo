<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">

    <!-- Checked State -->
    <item android:state_checked="true">
        <layer-list>
            <!-- Background Oval Shape -->
            <item android:top="5dp" android:right="5dp" android:bottom="5dp" android:left="3dp">
                <shape android:shape="oval">
                    <solid android:color="#FCF3BB"/>
                    <size android:width="30dp" android:height="30dp"/>
                </shape>
            </item>
            <item android:drawable="@drawable/ic_light_mode"
                android:gravity="center"
                />
        </layer-list>
    </item>

    <!-- Unchecked State -->
    <item android:state_checked="false">
        <layer-list>
            <!-- Background Oval Shape -->
            <item android:top="3dp" android:right="3dp" android:bottom="3dp" android:left="3dp">
                <shape android:shape="oval">
                    <solid android:color="#030303"/>
                    <size android:width="30dp" android:height="30dp"/>
                </shape>
            </item>
            <!-- Image Icon -->
            <item android:drawable="@drawable/ic_dark_mode"
                android:gravity="center" />
        </layer-list>
    </item>

</selector>
